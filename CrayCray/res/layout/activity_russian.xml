<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RussianActivity" >

    <ImageView
        android:id="@+id/russianBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/russian_background" />

    <ImageButton
        android:id="@+id/fireGun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/scaredCrayCray"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:onClick="playRussian"
        android:src="@drawable/gun" />

    <ImageView
        android:id="@+id/scaredCrayCray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/fireGun"
        android:src="@drawable/scared_baby" />

</RelativeLayout>